<table id="todo" class="table">
          <thead>
              <tr>
                  <th>Name</th>
                  <th>Description</th>
                  <th>Completed</th>
                  <th></th>
              </tr>
          </thead>
          <tbody>
            <tr>
              <td>
              <%= todo.name %>
              </td>
              <td>
              <%= todo.description %>
              </td>
              <td>
              <%= todo.completed %>
              </td>
            </tr>
          </tbody>
        </table>
<div class="form-container">
    <h2>Edit</h2>
    <form action=<%= "/todos/" + todo._id%> id="put-form">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" name="name" class="form-control" id="name" placeholder="Name">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <TEXTAREA name="description" class="form-control" id="description" placeholder="Description" rows="4" cols="20"></TEXTAREA>
        </div>
        <div class="form-group">
            <label for="completed">Completed</label>
            <select name="completed" class="form-control" id="completed">
              <option value="false">No</option>
              <option value="true">Yes</option>
            </select>
        </div>
        <button type="submit">Update</button>
    </form>
</div>
